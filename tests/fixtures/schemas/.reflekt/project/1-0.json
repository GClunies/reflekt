{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": ".reflekt/project/1-0.json",
    "description": "Schema for Reflekt projects",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "project",
        "format": "jsonschema",
        "version": "1-0"
    },
    "type": "object",
    "properties": {
        "version": {"type": "number"},
        "name": {"type": "string"},
        "profile": {"type": "string"},
        "profiles_path": {"type": "string"},
        "schemas": {
            "type": "object",
            "properties": {
                "conventions": {
                    "type": "object",
                    "properties": {
                        "event": {
                            "type": "object",
                            "properties": {
                                "casing": {"type": "string", "enum": ["snake", "camel", "title", "any"]},
                                "capitalize_camel": {"type": "boolean"},
                                "numbers": {"type": "boolean"},
                                "reserved": {"type": "array", "items": {"type": "string"}}
                            }
                        },
                        "property": {
                            "type": "object",
                            "properties": {
                                "casing": {"type": "string", "enum": ["snake", "camel", "title", "any"]},
                                "numbers": {"type": "boolean"},
                                "reserved": {"type": "array", "items": {"type": "string"}},
                                "allow_additional": {"type": "boolean"}
                            }
                        },
                        "data_types": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": ["string", "integer", "number", "boolean", "object", "array", "any", "null"]
                            }
                        }
                    },
                    "required": ["event", "property", "data_types"],
                    "additionalProperties": false
                }
            }
        },
        "targets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {"type": "string"},
                    "type": {"type": "string", "enum": ["snowflake", "bigquery", "redshift"]},
                    "database": {"type": "string"},
                    "schema": {"type": "string"}
                },
                "required": ["type", "database", "schema"],
                "additionalProperties": false
            }
        },
        "registry": {
            "type": "object",
            "properties": {
                "avo": {
                    "type": "object",
                    "properties": {
                        "branches": {
                            "type": "object",
                            "propertyNames": {
                                "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
                            },
                            "patternProperties": {
                                "": {"type": "string"}
                            }
                        }
                    },
                    "required": ["branches"],
                    "additionalProperties": false
                }
            }
        },
        "artifacts": {
            "type": "object",
            "properties": {
                "dbt": {
                    "type": "object",
                    "properties": {
                        "sources": {
                            "type": "object",
                            "properties": {
                                "prefix": {"type": "string"}
                            },
                            "required": ["prefix"]
                        },
                        "models": {
                            "type": "object",
                            "properties": {
                                "prefix": {"type": "string"}
                            },
                            "required": ["prefix"]
                        },
                        "docs": {
                            "type": "object",
                            "properties": {
                                "prefix": {"type": "string"},
                                "in_folder": {"type": "boolean"},
                                "tests": { "type": "object"},
                                "test_unique": {"type": "boolean"}
                            },
                            "required": ["prefix", "in_folder", "tests"]
                        }
                    }
                }
            }
        }
    },
    "required": ["version", "name", "profile", "profiles_path", "schemas", "artifacts"]
}
