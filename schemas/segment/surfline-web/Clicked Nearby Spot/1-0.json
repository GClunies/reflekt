{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Clicked Nearby Spot/1-0.json",
    "description": "Web event fired when a user selects a spot from the \"Nearby Spots\" dropdown or from the nearby spot carousel below a surf cam on a surf report page.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Clicked Nearby Spot",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/forecast-web",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "clickedLocation": {
            "description": "Where the event fired on our application.",
            "type": "string"
        },
        "spotId": {
            "description": "The spot ID.",
            "type": "string"
        },
        "spotName": {
            "description": "The spot name.",
            "type": "string"
        }
    },
    "required": [
        "clickedLocation",
        "spotId",
        "spotName"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}