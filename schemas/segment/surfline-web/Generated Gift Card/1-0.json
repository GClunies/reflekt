{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Generated Gift Card/1-0.json",
    "description": "Server side event when we generate a gift card.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Generated Gift Card",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "server",
        "owner": "@Surfline/squad-subscription",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "campaign": {
            "description": "The campaign name.",
            "type": "string"
        },
        "department": {
            "description": "The department.",
            "type": "string"
        },
        "duration": {
            "description": "The duration the gift card is valid for.",
            "type": "integer"
        },
        "planId": {
            "description": "The plan ID.",
            "type": "string"
        },
        "platform": {
            "description": "The platform the event is attributed to.",
            "enum": [
                "web",
                "ios",
                "android"
            ],
            "type": "string"
        },
        "purchaseDate": {
            "description": "The purchase date.",
            "format": "date-time",
            "type": "string"
        },
        "purchaserEmail": {
            "description": "The purchaser's email.",
            "type": "string"
        },
        "purchaserName": {
            "description": "The name of the purchaser.",
            "type": "string"
        },
        "redeemCode": {
            "description": "The redemption code for the gift card.",
            "type": "string"
        },
        "userId": {
            "description": "The user's ID.",
            "type": "string"
        }
    },
    "required": [
        "campaign",
        "department",
        "duration",
        "planId",
        "platform",
        "purchaseDate",
        "purchaserEmail",
        "purchaserName",
        "redeemCode",
        "userId"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}