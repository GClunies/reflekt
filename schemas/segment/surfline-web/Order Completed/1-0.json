{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Order Completed/1-0.json",
    "description": "Server-side event fired when a user completes an order of any kind (subscription [free-trial or direct], ecommerce, travel, etc).",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Order Completed",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "server",
        "owner": "@Surfline/squad-subscription",
        "priority": 1
    },
    "type": "object",
    "properties": {
        "billingPlatform": {
            "description": "The billing platform that processed the order.",
            "enum": [
                "android",
                "ios",
                "web",
                "stripe",
                "booking-layer"
            ],
            "type": "string"
        },
        "coupon": {
            "description": "Transaction coupon redeemed with the transaction.",
            "type": [
                "string",
                "null"
            ]
        },
        "currency": {
            "description": "Currency code associated with the transaction.",
            "type": [
                "string",
                "null"
            ]
        },
        "discount": {
            "description": "Total discount associated with the transaction.",
            "type": [
                "number",
                "null"
            ]
        },
        "giftCardId": {
            "description": "The ID of gift card (if being purchased).",
            "type": [
                "string",
                "null"
            ]
        },
        "inTrial": {
            "description": "If the product is a subscription, whether or not it beings with a free-trial.",
            "type": "string"
        },
        "interval": {
            "description": "If the product is a subscription, the interval of the subscription.",
            "enum": [
                "month",
                "year"
            ],
            "type": "string"
        },
        "orderId": {
            "description": "The ID of the order.",
            "type": "string"
        },
        "orderType": {
            "description": "The line of business the order takes place under (e.g. E-commerce, subscription, etc).",
            "enum": [
                "ecommerce",
                "subscription",
                "travel"
            ],
            "type": "string"
        },
        "planId": {
            "description": "The ID of the plan",
            "type": [
                "string",
                "null"
            ]
        },
        "planName": {
            "description": "The name of the plan",
            "enum": [
                "premium annual",
                "premium monthly",
                "youth annual",
                "region annual - east coast"
            ],
            "type": "string"
        },
        "products": {
            "description": "Products in the order.",
            "items": {
                "properties": {
                    "billingPlatform": {
                        "description": "The billing platform that processed the order.",
                        "enum": [
                            "android",
                            "ios",
                            "web",
                            "stripe",
                            "booking-layer"
                        ],
                        "type": [
                            "string"
                        ]
                    },
                    "brand": {
                        "description": "Brand of the product being ordered.",
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "category": {
                        "description": "Category of the product being ordered (e.g. 'boards', 'surf accessories', 'apparel', 'wetsuits').",
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "coupon": {
                        "description": "Coupon code associated with a product (e.g MAY_DEALS_3).",
                        "type": [
                            "string"
                        ]
                    },
                    "imageUrl": {
                        "description": "URL of the product image.",
                        "type": [
                            "string"
                        ]
                    },
                    "inTrial": {
                        "description": "If the product is a subscription, whether or not it beings with a free-trial.",
                        "type": [
                            "string"
                        ]
                    },
                    "interval": {
                        "description": "If the product is a subscription, the interval of the subscription.",
                        "type": [
                            "string"
                        ]
                    },
                    "name": {
                        "description": "Name of the product being ordered.",
                        "type": [
                            "string"
                        ]
                    },
                    "price": {
                        "description": "Quantity of the product being ordered.",
                        "type": [
                            "number",
                            "null"
                        ]
                    },
                    "product_id": {
                        "description": "ID of the product being ordered.",
                        "type": [
                            "string"
                        ]
                    },
                    "quantity": {
                        "description": "Quantity of the product being ordered.",
                        "type": [
                            "integer"
                        ]
                    },
                    "sku": {
                        "description": "Sku of the product being ordered.",
                        "type": [
                            "string"
                        ]
                    },
                    "url": {
                        "description": "URL of the product page.",
                        "type": [
                            "string"
                        ]
                    },
                    "variant": {
                        "description": "A dictionary of key-value pairs describing the product (e.g. {color: 'blue', size: 'large'}).",
                        "properties": {
                            "color": {
                                "description": "Product color.",
                                "type": [
                                    "string"
                                ]
                            },
                            "entryType": {
                                "description": "Entry type (for wetsuits).",
                                "type": [
                                    "string"
                                ]
                            },
                            "size": {
                                "description": "Product size.",
                                "type": [
                                    "string"
                                ]
                            }
                        },
                        "required": [],
                        "type": [
                            "object"
                        ]
                    }
                },
                "required": [
                    "billingPlatform",
                    "brand",
                    "category",
                    "price",
                    "product_id",
                    "quantity",
                    "sku"
                ],
                "type": "object"
            },
            "type": "array"
        },
        "promotionId": {
            "description": "The ID of the promotion (if any) associated with the order.",
            "type": [
                "string",
                "null"
            ]
        },
        "revenue": {
            "description": "Revenue ($) associated with the transaction (excluding shipping and tax).",
            "type": [
                "number",
                "null"
            ]
        },
        "shipping": {
            "description": "Shipping cost associated with the transaction.",
            "type": [
                "number",
                "null"
            ]
        },
        "tax": {
            "description": "Total tax associated with the transaction.",
            "type": [
                "number",
                "null"
            ]
        },
        "total": {
            "description": "Revenue ($) with discounts and coupons added in.",
            "type": [
                "number",
                "null"
            ]
        }
    },
    "required": [
        "billingPlatform",
        "coupon",
        "currency",
        "discount",
        "giftCardId",
        "orderId",
        "orderType",
        "planId",
        "products",
        "promotionId",
        "revenue",
        "shipping",
        "tax",
        "total"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}