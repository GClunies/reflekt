{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Requested Forgot Password Email/1-0.json",
    "description": "Server side event fired when a user requests an email to reset their password.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Requested Forgot Password Email",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "server",
        "owner": "@Surfline/squad-subscription",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "code": {
            "description": "The code.",
            "type": "string"
        },
        "email": {
            "description": "The user's email.",
            "type": "string"
        },
        "isCwUser": {
            "description": "Is the user a Coastal Watch user as well?",
            "type": "boolean"
        },
        "isFirstTime": {
            "description": "Is this the first forgot password request for the user?",
            "type": "boolean"
        },
        "migratedBrand": {
            "description": "The brand from which the user was migrated.",
            "type": "string"
        },
        "platform": {
            "description": "The platform the event is attributed to.",
            "enum": [
                "web",
                "ios",
                "android"
            ],
            "type": "string"
        },
        "url": {
            "description": "The URL.",
            "type": "string"
        }
    },
    "required": [
        "code",
        "email",
        "platform",
        "url"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}