{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Account Created/1-0.json",
    "description": "Server side event fired when an account is created and sent from our internal system. Used for all 3 platforms (web, iOS, android).",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Account Created",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "server",
        "owner": "@Surfline/squad-subscription",
        "priority": 1
    },
    "type": "object",
    "properties": {
        "accountRecovered": {
            "description": "Whether or not the account is being recovered.",
            "type": "string"
        },
        "brand": {
            "description": "The brand the account is being created on.",
            "type": "string"
        },
        "clientId": {
            "description": "The client ID.",
            "type": "string"
        },
        "emailVerificationHash": {
            "description": "The email verification hash (for engineering use).",
            "type": "string"
        },
        "generatedPassword": {
            "description": "The generated password.",
            "type": [
                "string",
                "null"
            ]
        },
        "hasPassword": {
            "description": "Whether or not the account has a password.",
            "type": "boolean"
        },
        "method": {
            "description": "The method by which the account was created.",
            "enum": [
                "email",
                "facebook"
            ],
            "type": "string"
        },
        "platform": {
            "description": "The platform the account was created on. Can be web, ios, or android since this is a server side event.",
            "type": [
                "string",
                "null"
            ]
        }
    },
    "required": [
        "brand",
        "emailVerificationHash",
        "generatedPassword",
        "hasPassword",
        "method",
        "platform"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}