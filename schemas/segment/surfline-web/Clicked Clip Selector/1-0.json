{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Clicked Clip Selector/1-0.json",
    "description": "When the user clicks a clip tile on the cam rewind page.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Clicked Clip Selector",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/squad-realtime",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "button": {
            "description": "The button that was clicked.",
            "type": "string"
        },
        "camId": {
            "description": "The camera ID.",
            "type": "string"
        },
        "camName": {
            "description": "The camera name.",
            "type": "string"
        },
        "category": {
            "description": "The event category (used to group related events).",
            "type": "string"
        },
        "daysAgo": {
            "description": "The number of days ago the clip was taken.",
            "type": "integer"
        },
        "pageName": {
            "description": "The page name.",
            "type": "string"
        },
        "premiumCam": {
            "description": "Is camera premium?",
            "type": "boolean"
        },
        "spotId": {
            "description": "The spot ID.",
            "type": "string"
        },
        "spotName": {
            "description": "The spot name.",
            "type": "string"
        }
    },
    "required": [
        "button",
        "camId",
        "camName",
        "category",
        "daysAgo",
        "pageName",
        "premiumCam",
        "spotId",
        "spotName"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}