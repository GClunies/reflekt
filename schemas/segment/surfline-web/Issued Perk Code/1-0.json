{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Issued Perk Code/1-0.json",
    "description": "Server side event that sends when a user redeems a perk code.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Issued Perk Code",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "server",
        "owner": "@Surfline/squad-subscription",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "perk": {
            "description": "The perk code.",
            "type": "string"
        },
        "platform": {
            "description": "The platform the event is attributed to.",
            "enum": [
                "web",
                "ios",
                "android"
            ],
            "type": "string"
        }
    },
    "required": [
        "perk",
        "platform"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}