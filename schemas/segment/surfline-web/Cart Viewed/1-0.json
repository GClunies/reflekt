{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Cart Viewed/1-0.json",
    "description": "Fired when a user clicks the cart button.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Cart Viewed",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/squad-subscription",
        "priority": 1
    },
    "type": "object",
    "properties": {
        "category": {
            "description": "The category this event belongs to (e.g. `kbyg`, `ecommerce`, `sessions`, `travel`, `content`).",
            "enum": [
                "kbyg",
                "ecommerce",
                "sessions",
                "travel",
                "content"
            ],
            "type": "string"
        },
        "products": {
            "description": "Products in the order.",
            "items": {
                "properties": {
                    "billingPlatform": {
                        "description": "The billing platform that processed the order.",
                        "enum": [
                            "android",
                            "ios",
                            "web",
                            "stripe",
                            "booking-layer"
                        ],
                        "type": [
                            "string"
                        ]
                    },
                    "brand": {
                        "description": "Brand of the product being ordered.",
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "category": {
                        "description": "Category of the product being ordered (e.g. 'boards', 'surf accessories', 'apparel', 'wetsuits').",
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "coupon": {
                        "description": "Coupon code associated with a product (e.g MAY_DEALS_3).",
                        "type": [
                            "string"
                        ]
                    },
                    "imageUrl": {
                        "description": "URL of the product image.",
                        "type": [
                            "string"
                        ]
                    },
                    "name": {
                        "description": "Name of the product being ordered.",
                        "type": [
                            "string"
                        ]
                    },
                    "price": {
                        "description": "Quantity of the product being ordered.",
                        "type": [
                            "number",
                            "null"
                        ]
                    },
                    "product_id": {
                        "description": "ID of the product being ordered.",
                        "type": [
                            "string"
                        ]
                    },
                    "quantity": {
                        "description": "Quantity of the product being ordered.",
                        "type": [
                            "integer"
                        ]
                    },
                    "sku": {
                        "description": "Sku of the product being ordered.",
                        "type": [
                            "string"
                        ]
                    },
                    "url": {
                        "description": "URL of the product page.",
                        "type": [
                            "string"
                        ]
                    },
                    "variant": {
                        "description": "A dictionary of key-value pairs describing the product (e.g. {color: 'blue', size: 'large'}).",
                        "properties": {
                            "color": {
                                "description": "Product color.",
                                "type": [
                                    "string"
                                ]
                            },
                            "entryType": {
                                "description": "Entry type (for wetsuits).",
                                "type": [
                                    "string"
                                ]
                            },
                            "gender": {
                                "description": "Product gender.",
                                "type": [
                                    "string"
                                ]
                            },
                            "size": {
                                "description": "Product size.",
                                "type": [
                                    "string"
                                ]
                            }
                        },
                        "required": [],
                        "type": [
                            "object"
                        ]
                    }
                },
                "required": [
                    "billingPlatform",
                    "brand",
                    "category",
                    "price",
                    "product_id",
                    "quantity",
                    "sku"
                ],
                "type": "object"
            },
            "type": "array"
        }
    },
    "required": [
        "category",
        "products"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}