{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Connected Account/1-0.json",
    "description": "Server side event fired when a user connects a 3rd party account (Garmin, Rip Curl, Amazon Alexa, Dawn Patrol).",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Connected Account",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "server",
        "owner": "@Surfline/squad-subscription",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "partner": {
            "description": "The partner name.",
            "enum": [
                "Dawn Patrol",
                "Amazon Alexa",
                "Rip Curl",
                "Garmin"
            ],
            "type": "string"
        },
        "platform": {
            "description": "The platform the event is attributed to.",
            "enum": [
                "web",
                "ios",
                "android"
            ],
            "type": "string"
        }
    },
    "required": [
        "partner",
        "platform"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}