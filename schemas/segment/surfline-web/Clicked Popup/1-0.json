{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Clicked Popup/1-0.json",
    "description": "Web event fired when a user clicks on a popup.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Clicked Popup",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/squad-web-platform",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "action": {
            "description": "The action taken on the popup.",
            "type": "string"
        },
        "bodyText": {
            "description": "The body text of the popup.",
            "type": "string"
        },
        "buttonText": {
            "description": "The text of the button.",
            "type": "string"
        },
        "category": {
            "description": "The event category (used to group related events).",
            "type": "string"
        },
        "pageName": {
            "description": "The page name.",
            "type": "string"
        },
        "popupName": {
            "description": "The name of the popup.",
            "type": "string"
        }
    },
    "required": [
        "bodyText",
        "buttonText",
        "pageName",
        "popupName"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}