{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Stopped Webcam/1-0.json",
    "description": "Client side event fired when a user stops a webcam by hitting pause, or leaving the spot page. Note - this event could fire when the cam player experiences buffering issues and/or the user minimizes/switches browser windows (other edge case scenarios possible).",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Stopped Webcam",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/squad-realtime",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "camId": {
            "description": "The camera ID.",
            "type": "string"
        },
        "camName": {
            "description": "The camera name.",
            "type": "string"
        },
        "category": {
            "description": "The event category (used to group related events).",
            "type": "string"
        },
        "favorite": {
            "description": "Is the camera a favorite?",
            "type": "boolean"
        },
        "isTimeout": {
            "description": "Is the camera stopping due to a timeout?",
            "type": "boolean"
        },
        "premiumCam": {
            "description": "Is camera premium?",
            "type": "boolean"
        },
        "spotId": {
            "description": "The spot ID.",
            "type": "string"
        },
        "spotName": {
            "description": "The spot name.",
            "type": "string"
        }
    },
    "required": [
        "camId",
        "camName",
        "category",
        "favorite",
        "isTimeout",
        "premiumCam",
        "spotId",
        "spotName"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}