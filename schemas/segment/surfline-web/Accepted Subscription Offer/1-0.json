{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Accepted Subscription Offer/1-0.json",
    "description": "Server side event fired when a user redeems a yearly upgrade promotion (via www.surfline.com/yearlyupgrade).",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Accepted Subscription Offer",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "server",
        "owner": "@Surfline/squad-subscription",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "planId": {
            "description": "The ID of the plan that was upgraded.",
            "type": "string"
        },
        "platform": {
            "description": "The platform that the user was on when the redeemed the promotion.",
            "enum": [
                "web",
                "ios",
                "android"
            ],
            "type": "string"
        },
        "promotionId": {
            "description": "The ID of the promotion that was redeemed.",
            "type": "string"
        },
        "promotionName": {
            "description": "The name of the promotion that was redeemed.",
            "type": "string"
        }
    },
    "required": [
        "planId",
        "platform",
        "promotionId",
        "promotionName"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}