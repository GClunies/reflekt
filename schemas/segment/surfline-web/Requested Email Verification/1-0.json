{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Requested Email Verification/1-0.json",
    "description": "Server side event fired when a user requests a new verification (resend) email.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Requested Email Verification",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "server",
        "owner": "@Surfline/squad-subscription",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "brand": {
            "description": "The brand the event is attributed to.",
            "type": "string"
        },
        "email": {
            "description": "The user's email.",
            "type": "string"
        },
        "emailVerificationHash": {
            "description": "The email verification hash.",
            "type": "string"
        },
        "platform": {
            "description": "The platform the event is attributed to.",
            "enum": [
                "web",
                "ios",
                "android"
            ],
            "type": "string"
        }
    },
    "required": [
        "brand",
        "email",
        "emailVerificationHash",
        "platform"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}