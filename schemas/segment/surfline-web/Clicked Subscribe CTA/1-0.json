{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Clicked Subscribe CTA/1-0.json",
    "description": "Web event fired when a user clicks a Call to Action (CTA) encouraging them to subscribe or start a free trial.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Clicked Subscribe CTA",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/squad-subscription",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "brand": {
            "description": "The brand of the CTA.",
            "type": "string"
        },
        "camId": {
            "description": "The cam ID.",
            "type": "string"
        },
        "category": {
            "description": "The event category.",
            "type": "string"
        },
        "checksRemaining": {
            "description": "The number of surf checks the user had remaining when clicking the CTA.",
            "type": "integer"
        },
        "contentId": {
            "description": "The content ID of the content when the CTA was clicked (if on content page).",
            "type": "string"
        },
        "contentType": {
            "description": "The type of the content when the CTA was clicked (if on content page).",
            "type": "string"
        },
        "ctaLocation": {
            "description": "The location of the CTA on the page.",
            "type": "string"
        },
        "isInstapage": {
            "description": "Indicates if the event originated from InstaPage.",
            "type": "boolean"
        },
        "location": {
            "description": "Where the event fired on our application.",
            "type": "string"
        },
        "mediaType": {
            "description": "The media type of the content when the CTA was clicked (if on content page).",
            "type": "string"
        },
        "pageName": {
            "description": "The page name of the content when the CTA was clicked (if on content page).",
            "type": "string"
        },
        "path": {
            "description": "The path portion of the page URL.",
            "type": "string"
        },
        "perkId": {
            "description": "The perk ID.",
            "type": [
                "string",
                "null"
            ]
        },
        "perkName": {
            "description": "The name of the perk.",
            "type": "string"
        },
        "premiumCam": {
            "description": "Whether or not the CTA was clicked on a page with a premium cam.",
            "type": "boolean"
        },
        "size": {
            "description": "The size of the CTA.",
            "type": "string"
        },
        "spotId": {
            "description": "The spot ID.",
            "type": "string"
        },
        "spotName": {
            "description": "The name of the spot.",
            "type": "string"
        },
        "subregion": {
            "description": "The subregion.",
            "type": "string"
        },
        "subregionId": {
            "description": "The subregion ID.",
            "type": "string"
        },
        "subregionName": {
            "description": "The subregion name.",
            "type": "string"
        },
        "tags": {
            "description": "Any tags associated the content when the CTA was clicked (if on content page).",
            "type": "array"
        },
        "title": {
            "description": "The title of the page.",
            "type": "string"
        },
        "url": {
            "description": "The full URL of the page.",
            "type": "string"
        },
        "withOffer": {
            "description": "Whether or not the CTA was part of an offer.",
            "type": "boolean"
        }
    },
    "required": [],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}