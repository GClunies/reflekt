{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Viewed Checkout Step/1-0.json",
    "description": "Fired when a user hits the checkout step of the funnel.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Viewed Checkout Step",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/squad-subscription",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "currency": {
            "description": "The currency.",
            "pattern": "[A-Z]",
            "type": "string"
        },
        "orderType": {
            "description": "The line of business the order takes place under (e.g. E-commerce, subscription, etc).",
            "enum": [
                "ecommerce",
                "subscription",
                "travel"
            ],
            "type": "string"
        },
        "planName": {
            "description": "The name of the plan",
            "enum": [
                "premium annual",
                "premium monthly",
                "youth annual",
                "free account"
            ],
            "type": "string"
        },
        "promotionId": {
            "description": "The promotion ID (if any).",
            "type": "string"
        },
        "quantity": {
            "description": "The quantity of the product ordered.",
            "type": "integer"
        },
        "step": {
            "description": "The funnel step.",
            "enum": [
                "1",
                "2",
                "3",
                "age verification"
            ],
            "type": "string"
        },
        "stepName": {
            "description": "The name of the funnel step.",
            "enum": [
                "authentication",
                "plan selection",
                "billing summary",
                "age verification",
                "payment"
            ],
            "type": "string"
        },
        "total": {
            "description": "The total cost of the order.",
            "type": "number"
        }
    },
    "required": [
        "orderType",
        "step",
        "stepName"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}