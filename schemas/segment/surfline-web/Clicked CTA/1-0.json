{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Clicked CTA/1-0.json",
    "description": "Web event fired when a user clicks a CTA",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Clicked CTA",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/squad-content",
        "priority": 1
    },
    "type": "object",
    "properties": {
        "category": {
            "description": "The product category this event belongs to (e.g. `kbyg`, `ecommerce`, `sessions`, `travel`, `content`).",
            "enum": [
                "kbyg",
                "ecommerce",
                "sessions",
                "travel",
                "content",
                "subscription"
            ],
            "type": "string"
        },
        "ctaText": {
            "description": "The text of the CTA.",
            "type": "string"
        },
        "location": {
            "description": "Description of where the CTA is located on the page or screen (e.g. `surf check counter`, `travel module`, `video paywall`, `top banner`, etc.).",
            "type": "string"
        },
        "path": {
            "description": "The path portion of the page URL.",
            "type": "string"
        },
        "referrer": {
            "description": "The previous page URL - aka `the page that referred the user to the current page`.",
            "type": "string"
        },
        "search": {
            "description": "Query string portion of the pages URL.",
            "type": "string"
        },
        "title": {
            "description": "The title of the page.",
            "type": "string"
        },
        "travelSupplierId": {
            "description": "The ID of the supplier.",
            "type": "string"
        },
        "travelSupplierName": {
            "description": "The name of the supplier.",
            "type": "string"
        },
        "travelZone": {
            "description": "The zone where the Supplier is located (as designated by Bookinglayer).",
            "type": "string"
        },
        "url": {
            "description": "The full URL of the page.",
            "type": "string"
        }
    },
    "required": [
        "category",
        "ctaText",
        "location"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}