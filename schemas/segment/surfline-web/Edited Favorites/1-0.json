{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Edited Favorites/1-0.json",
    "description": "Server side event fired when a user adds, modifies or deletes favorites.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Edited Favorites",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "server",
        "owner": "@Surfline/squad-web-platform",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "action": {
            "description": "The action that was performed.",
            "enum": [
                "add",
                "delete",
                "modify"
            ],
            "type": "string"
        },
        "favoriteType": {
            "description": "The type of favorite.",
            "type": "string"
        },
        "platform": {
            "description": "The platform the event is attributed to.",
            "enum": [
                "web",
                "ios",
                "android"
            ],
            "type": "string"
        },
        "spotId": {
            "description": "The spot ID.",
            "type": "string"
        }
    },
    "required": [
        "action",
        "favoriteType",
        "platform",
        "spotId"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}