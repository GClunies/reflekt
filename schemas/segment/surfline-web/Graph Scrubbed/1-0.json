{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Graph Scrubbed/1-0.json",
    "description": "Fired when a user scrubs a graph on the screen (e.g. condition, surf, wind, tide, etc)",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Graph Scrubbed",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/squad-web-platform",
        "priority": 1
    },
    "type": "object",
    "properties": {
        "forecastEnd": {
            "description": "When the forecast being viewed ends relative to today (4 = today + 3 days)",
            "type": "integer"
        },
        "forecastLength": {
            "description": "How many days are in forecast being viewed (4 = 4-day forecast is being viewed)",
            "type": "integer"
        },
        "forecastStart": {
            "description": "When the forecast being viewed starts relative to today (1 = today)",
            "type": "integer"
        },
        "graphType": {
            "description": "The graph type",
            "enum": [
                "condition",
                "surf height",
                "swell",
                "wind",
                "tide",
                "live-wind-bar",
                "live-wind-observed",
                "live-wind-forecast"
            ],
            "type": "string"
        },
        "spotId": {
            "description": "The spot ID.",
            "type": "string"
        },
        "spotName": {
            "description": "The spot name.",
            "type": "string"
        },
        "tabName": {
            "description": "the name of the tab the user is on.",
            "enum": [
                "live",
                "forecast"
            ],
            "type": "string"
        }
    },
    "required": [
        "forecastStart",
        "forecastEnd",
        "forecastLength",
        "graphType",
        "spotId",
        "spotName",
        "tabName"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}