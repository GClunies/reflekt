{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Changed Cam Selection/1-0.json",
    "description": "Web event fired when a user adds or changes a surf camera (from favorites) on the multi-cam page.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Changed Cam Selection",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/squad-realtime",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "camId": {
            "description": "The camera ID.",
            "type": "string"
        },
        "camName": {
            "description": "The name of the camera.",
            "type": "string"
        },
        "category": {
            "description": "The event category (used to group related events).",
            "type": "string"
        },
        "conditions": {
            "description": "The conditions of the camera when it was added to the multi-cam page.",
            "type": [
                "string",
                "null"
            ]
        },
        "hasCam": {
            "description": "Indicates if spot added has a camera.",
            "type": "boolean"
        },
        "human": {
            "description": "Indicates if the spot added has a human-forecast.",
            "type": "boolean"
        },
        "pageName": {
            "description": "The name of the page the event was fired from.",
            "enum": [
                "multi-cam"
            ],
            "type": "string"
        },
        "premiumCam": {
            "description": "Indicates if the spot added is a premium camera.",
            "type": "boolean"
        },
        "spotId": {
            "description": "The spot ID.",
            "type": "string"
        },
        "spotName": {
            "description": "The name of the spot.",
            "type": "string"
        },
        "subregionId": {
            "description": "The subregion ID.",
            "type": "string"
        },
        "waveHeightMax": {
            "description": "The maximum wave height when the spot was added to the multi-cam page.",
            "type": "number"
        },
        "waveHeightMin": {
            "description": "The minimum wave height when the spot was added to the multi-cam page.",
            "type": "number"
        }
    },
    "required": [
        "category",
        "conditions",
        "hasCam",
        "human",
        "pageName",
        "spotId",
        "spotName",
        "subregionId",
        "waveHeightMax",
        "waveHeightMin"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}