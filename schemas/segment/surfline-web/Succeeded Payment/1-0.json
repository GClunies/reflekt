{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Succeeded Payment/1-0.json",
    "description": "Server side event fired when a subscription payment is successful with Stripe.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Succeeded Payment",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "server",
        "owner": "@Surfline/squad-subscription",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "active": {
            "description": "Is the subscription active?",
            "type": "boolean"
        },
        "billingPlatform": {
            "description": "Represents the payment processor for each subscription.",
            "enum": [
                "stripe",
                "ios",
                "android",
                "gift"
            ],
            "type": "string"
        },
        "currency": {
            "description": "The currency.",
            "pattern": "[A-Z]",
            "type": "string"
        },
        "currentPeriodEnd": {
            "description": "The end of the current trial or billing period.",
            "format": "date-time",
            "type": "string"
        },
        "currentPeriodStart": {
            "description": "The start of the current trial or billing period.",
            "type": "string"
        },
        "daysUntilRenew": {
            "description": "The number of days until renewal, e.g. 15, 30, 60.",
            "type": "number"
        },
        "entitlement": {
            "description": "The user's entitlement.",
            "type": "string"
        },
        "expiration": {
            "description": "The expiration date.",
            "format": "date-time",
            "type": "string"
        },
        "interval": {
            "description": "The subscription billing interval.",
            "enum": [
                "month",
                "year"
            ],
            "type": "string"
        },
        "planId": {
            "description": "The plan ID.",
            "type": "string"
        },
        "platform": {
            "description": "The platform the event is attributed to.",
            "enum": [
                "web",
                "ios",
                "android"
            ],
            "type": "string"
        },
        "promotionId": {
            "description": "The ID of the associated promotional campaign.",
            "type": "string"
        },
        "revenue": {
            "description": "The transaction revenue.",
            "type": "number"
        },
        "secondsRemaining": {
            "description": "Time remaining on a subscription.",
            "type": "integer"
        },
        "subscriptionId": {
            "description": "The subscription ID.",
            "type": "string"
        },
        "trialEligible": {
            "description": "Is the user eligible for a trial?",
            "type": "boolean"
        },
        "trialEndDate": {
            "description": "The end of the current trial.",
            "format": "date-time",
            "type": "string"
        },
        "trialLength": {
            "description": "The length of the trial in days.",
            "type": "integer"
        },
        "trialStartDate": {
            "description": "The start of the current trial.",
            "format": "date-time",
            "type": "string"
        }
    },
    "required": [
        "currency",
        "daysUntilRenew",
        "entitlement",
        "interval",
        "planId",
        "platform",
        "revenue",
        "subscriptionId"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}