{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-web/Served Popup/1-0.json",
    "description": "Web event fired when a user is served a popup on a page.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Served Popup",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/squad-web-platform",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "bodyText": {
            "description": "The body text of the popup.",
            "type": "string"
        },
        "category": {
            "description": "The event category (used to group related events).",
            "type": "string"
        },
        "pageName": {
            "description": "The page name.",
            "type": "string"
        },
        "platform": {
            "description": "The platform the event is attributed to.",
            "pattern": "web",
            "type": "string"
        },
        "popupName": {
            "description": "The popup name.",
            "type": "string"
        }
    },
    "required": [
        "bodyText",
        "pageName",
        "popupName"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}