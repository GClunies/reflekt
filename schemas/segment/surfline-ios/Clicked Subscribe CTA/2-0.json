{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-ios/Clicked Subscribe CTA/2-0.json",
    "description": "Client side event fired when a user clicks any Call-to-Action (CTA) in the app (e.g., \"Start Free Trial\").",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Clicked Subscribe CTA",
        "format": "jsonschema",
        "version": "2-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/native-ios",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "accessibilityTag": {
            "description": "The accessibility tag of the CTA.",
            "type": "string"
        },
        "category": {
            "description": "The event category (used to group related events).",
            "type": "string"
        },
        "checkType": {
            "description": "The type of check (surf or spot).",
            "enum": [
                "Spot",
                "Surf"
            ],
            "type": "string"
        },
        "checksRemaining": {
            "description": "Number of surf or spot checks remaining at time of click.",
            "type": "integer"
        },
        "contentId": {
            "description": "the ID of the content.",
            "type": "string"
        },
        "contentType": {
            "description": "The type of content.",
            "type": "string"
        },
        "emailState": {
            "description": "Whether or not the user's email address is verified.",
            "type": "string"
        },
        "eventCategory": {
            "description": "The event category.",
            "type": "string"
        },
        "funnel": {
            "description": "The name or type of funnel the CTA belongs to.",
            "type": "string"
        },
        "hasCam": {
            "description": "Whether or not the page where the CTA was clicked has a camera.",
            "type": "boolean"
        },
        "location": {
            "description": "Where the event fired on our application.",
            "type": "string"
        },
        "mode": {
            "description": "The mode of the player (if applicable) when the CTA was clicked.",
            "type": "string"
        },
        "orientation": {
            "description": "The orientation of the screen when the user clicked the CTA.",
            "type": "string"
        },
        "screenName": {
            "description": "The screen name where the user clicked the CTA.",
            "type": "string"
        },
        "spotId": {
            "description": "The spotID.",
            "type": "string"
        },
        "spotName": {
            "description": "The spot name.",
            "type": "string"
        },
        "spotReliveRating": {
            "description": "The rating of the surfline session.",
            "type": [
                "integer",
                "null"
            ]
        },
        "subregionId": {
            "description": "The subregionID.",
            "type": "string"
        },
        "tags": {
            "description": "The tags of the content.",
            "type": "string"
        },
        "text": {
            "description": "The text of the CTA.",
            "type": "string"
        },
        "title": {
            "description": "The title of the content.",
            "type": "string"
        }
    },
    "required": [],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}