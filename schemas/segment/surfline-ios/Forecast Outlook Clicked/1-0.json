{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-ios/Forecast Outlook Clicked/1-0.json",
    "description": "Fired when a user clicks a spot or forecast date on the forecast outlook.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Forecast Outlook Clicked",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/native-ios",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "forecastDay": {
            "description": "Number of the day clicked in the Outlook table in order from left to right (null if the user clicked on the spot name).",
            "type": [
                "integer",
                "null"
            ]
        },
        "forecastEnd": {
            "description": "When the forecast being viewed ends relative to today (4 = today + 3 days)",
            "type": "integer"
        },
        "forecastStart": {
            "description": "When the forecast being viewed starts relative to today (1 = today)",
            "type": "integer"
        },
        "positionNumber": {
            "description": "Number of the favorite clicked in order from top to bottom.",
            "type": "integer"
        },
        "screenName": {
            "description": "The screen name.",
            "type": "string"
        },
        "spotId": {
            "description": "The spot ID.",
            "type": "string"
        },
        "spotName": {
            "description": "The spot name.",
            "type": "string"
        },
        "subregionId": {
            "description": "The subregion ID.",
            "type": "string"
        },
        "subregionName": {
            "description": "The subregion name.",
            "type": "string"
        }
    },
    "required": [
        "forecastStart",
        "forecastEnd",
        "positionNumber",
        "spotId",
        "spotName",
        "screenName",
        "subregionId",
        "subregionName"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}