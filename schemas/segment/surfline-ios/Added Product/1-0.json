{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-ios/Added Product/1-0.json",
    "description": "Client side event fired when a user makes a product selection (monthly, yearly) from the dropdown in our funnel.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Added Product",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/native-ios",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "category": {
            "description": "The event category (used to group related events).",
            "type": "string"
        },
        "currency": {
            "description": "The currency.",
            "pattern": "[A-Z]",
            "type": "string"
        },
        "id": {
            "description": "The product ID.",
            "type": "string"
        },
        "interval": {
            "description": "The subscription billing interval.",
            "enum": [
                "month",
                "year"
            ],
            "type": "string"
        },
        "intervalCount": {
            "description": "The count of billing intervals that have occured for the subscription.",
            "type": "integer"
        },
        "paymentPlatform": {
            "description": "The payment platform.",
            "type": "string"
        },
        "price": {
            "description": "The price.",
            "type": "number"
        },
        "productName": {
            "description": "The product name.",
            "type": "string"
        },
        "quantity": {
            "description": "The quantity.",
            "type": "integer"
        },
        "sku": {
            "description": "The product SKU.",
            "type": "string"
        }
    },
    "required": [
        "category",
        "currency",
        "id",
        "interval",
        "intervalCount",
        "paymentPlatform",
        "price",
        "productName",
        "quantity",
        "sku"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}