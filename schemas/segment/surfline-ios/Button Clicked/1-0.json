{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-ios/Button Clicked/1-0.json",
    "description": "Fired when a user clicks a button.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Button Clicked",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/native-ios",
        "priority": 1
    },
    "type": "object",
    "properties": {
        "buttonText": {
            "description": "The name of the button (e.g. '<' for left arrow, 'Sign Up' for account creation CTA).",
            "type": "string"
        },
        "screenName": {
            "description": "The screen name.",
            "type": "string"
        },
        "uiElement": {
            "description": "The UI element the event fires from (e.g. forecast outlook).",
            "type": "string"
        }
    },
    "required": [
        "buttonText",
        "screenName",
        "uiElement"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}