{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-ios/Clicked Link/3-0.json",
    "description": "Client side event fired when a user clicks a link anywhere in the app (e.g., Report or Forecast tab, Premium Analysis, Surf Feed items, Storm Feed Items, links within web views).",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Clicked Link",
        "format": "jsonschema",
        "version": "3-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/native-ios",
        "priority": 2
    },
    "type": "object",
    "properties": {
        "category": {
            "description": "The product category this event belongs to (e.g. `kbyg`, `ecommerce`, `sessions`, `travel`, `content`).",
            "enum": [
                "kbyg",
                "ecommerce",
                "sessions",
                "travel",
                "content"
            ],
            "type": "string"
        },
        "linkScreenName": {
            "description": "The name of the screen the user will be linked to.",
            "type": "string"
        },
        "linkText": {
            "description": "The text in the link.",
            "type": "string"
        },
        "location": {
            "description": "Where the event fired on our application.",
            "type": "string"
        },
        "screenLocation": {
            "description": "The location on the screen where the link is clicked (e.g. 'Favorites Carousel', 'Travel Carousel', etc).",
            "type": "string"
        },
        "screenName": {
            "description": "The screen name.",
            "type": "string"
        },
        "spotId": {
            "description": "The ID of the spot.",
            "type": "string"
        },
        "spotName": {
            "description": "The spot name.",
            "type": "string"
        }
    },
    "required": [
        "category",
        "linkText",
        "linkScreenName",
        "location",
        "screenName",
        "screenLocation"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}