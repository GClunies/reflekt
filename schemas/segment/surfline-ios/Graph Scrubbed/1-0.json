{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment/surfline-ios/Graph Scrubbed/1-0.json",
    "description": "Client side event fired when a user scrubs a graph on the screen (e.g. condition, surf, wind, tide, etc)",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Graph Scrubbed",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": {
        "fires_on": "client",
        "owner": "@Surfline/native-ios",
        "priority": 1
    },
    "type": "object",
    "properties": {
        "forecastPeriod": {
            "description": "The forecast period (single day).",
            "type": "integer"
        },
        "graphType": {
            "description": "The graph type",
            "enum": [
                "condition",
                "surf height",
                "wind",
                "tide",
                "swell"
            ],
            "type": "string"
        },
        "spotId": {
            "description": "The spot ID.",
            "type": "string"
        },
        "spotName": {
            "description": "The spot name.",
            "type": "string"
        }
    },
    "required": [
        "graphType",
        "spotId",
        "spotName"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}