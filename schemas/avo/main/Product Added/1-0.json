{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "avo/main/Product Added/1-0.json",
    "description": "User adds a product to their shopping cart.",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "Product Added",
        "format": "jsonschema",
        "version": "1-0"
    },
    "metadata": [
        "code_owner: Maura",
        "product_owner: Greg"
    ],
    "type": "object",
    "properties": {
        "cart_id": {
            "description": "Cart ID to which the product was added to",
            "type": "string"
        },
        "product_id": {
            "description": "Database id of the product being viewed",
            "type": "number",
            "multipleOf": 1
        },
        "name": {
            "description": "Name of the product being viewed",
            "type": "string"
        },
        "variant": {
            "description": "Variant of the product (e.g. mild, medium, spicy)",
            "type": "string",
            "enum": [
                "mild",
                "medium",
                "spicy"
            ]
        },
        "quantity": {
            "description": "Quantity of the product",
            "type": "number",
            "multipleOf": 1
        },
        "price": {
            "description": "Price ($) of the product being viewed",
            "type": "number"
        },
        "box_size": {
            "description": "The size of the box (e.g. 12, 24, 36 patties)",
            "type": [
                "number",
                "null"
            ],
            "multipleOf": 1
        }
    },
    "required": [
        "cart_id",
        "product_id",
        "name",
        "variant",
        "quantity",
        "price"
    ],
    "additionalProperties": false,
    "metrics": {
        "dimensions": [],
        "measures": []
    }
}