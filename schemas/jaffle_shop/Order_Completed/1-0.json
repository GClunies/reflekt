{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "jaffle_shop/Order_Completed/1-0.json",
    "description": "User completed an order (i.e., user confirmed and payment was successful).",
    "self": {
        "vendor": "com.thejaffleshop",
        "name": "Order Completed",
        "format": "jsonschema",
        "version": "1-0",
        "metadata": {}
    },
    "type": "object",
    "properties": {
        "session_id": {
            "type": "string",
            "description": "Unique identifier for the session."
        },
        "order_id": {
            "type": "string",
            "description": "Unique identifier for the order."
        },
        "revenue": {
            "type": "number",
            "description": "Total revenue for the order."
        },
        "coupon": {
            "type": ["string", "null"],
            "description": "Coupon code used for the order."
        },
        "discount": {
            "type": "number",
            "description": "Total discount for the order."
        },
        "subtotal": {
            "type": "number",
            "description": "Subtotal for the order (revenue - discount)."
        },
        "shipping": {
            "type": "number",
            "description": "Shipping cost for the order."
        },
        "tax": {
            "type": "number",
            "description": "Tax for the order."
        },
        "total": {
            "type": "number",
            "description": "Total cost for the order (revenue - discount + shipping + tax = subtotal + shipping + tax)."
        },
        "currency": {
            "type": "string",
            "description": "Currency for the order."
        },
        "products": {
            "type": "array",
            "description": "List of products in the cart.",
            "items": {
                "type": "object",
                "properties": {
                    "product_id": {
                        "type": "string",
                        "description": "Unique identifier for the product."
                    },
                    "sku": {
                        "type": "string",
                        "description": "Stock keeping unit for the product."
                    },
                    "category": {
                        "type": "string",
                        "description": "Category of the product."
                    },
                    "name": {
                        "type": "string",
                        "description": "Name of the product."
                    },
                    "price": {
                        "type": "number",
                        "description": "Price of the product."
                    },
                    "quantity": {
                        "type": "integer",
                        "description": "Quantity of the product in the cart."
                    }
                },
                "required": [
                    "product_id",
                    "sku",
                    "category",
                    "name",
                    "price",
                    "quantity"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "session_id",
        "order_id",
        "revenue",
        "coupon",
        "discount",
        "subtotal",
        "shipping",
        "tax",
        "total",
        "currency",
        "products"
    ],
    "additionalProperties": false
}
