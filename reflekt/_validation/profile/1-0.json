{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for Reflekt profiles",
    "self": {
        "vendor": "com.reflekt-ci",
        "name": "profile",
        "format": "jsonschema",
        "version": "1-0"
    },
    "type": "object",
    "properties": {
        "registry": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["avo", "segment"]
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {"type": {"const": "segment"}},
                            "required": ["type"]
                        },
                        "then": {
                            "properties": {
                                "api_token": {"type": "string"}
                            },
                            "required": ["api_token"]
                        }
                    },
                    {
                        "if": {
                            "properties": {"type": {"const": "avo"}},
                            "required": ["type"]
                        },
                        "then": {
                            "properties": {
                                "service_account_name": {"type": "string"},
                                "service_account_secret": {"type": "string"}
                            },
                            "required": ["service_account_name", "service_account_secret"]
                        }
                    }
                ],
                "required": ["type"]
            }
        },
        "source": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {"type": "string"},
                    "type": {
                        "type": "string",
                        "enum": ["snowflake", "redshift"]
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {"type": {"const": "snowflake"}},
                            "required": ["type"]
                        },
                        "then": {
                            "properties": {
                                "account": {"type": "string"},
                                "database": {"type": "string"},
                                "warehouse": {"type": "string"},
                                "role": {"type": "string"},
                                "user": {"type": "string"},
                                "password": {"type": "string"}
                            },
                            "required": ["account", "database", "warehouse", "role", "user", "password"]
                        }
                    },
                    {
                        "if": {
                            "properties": {"type": {"const": "redshift"}},
                            "required": ["type"]
                        },
                        "then": {
                            "properties": {
                                "host": {"type": "string"},
                                "port": {"type": "integer"},
                                "database": {"type": "string"},
                                "user": {"type": "string"},
                                "password": {"type": "string"}
                            },
                            "required": ["host", "port", "database", "user", "password"]
                        }
                    }
                ],
                "required": ["id", "type"]
            }
        },
        "do_not_track": {"type": "boolean"}
    },
    "required": ["registry", "source"]
}
